@model gamers_heaven.Models.Products

@{
    ViewData["Title"] = "Add New Game";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-white" style="background-color: #9800FF;>
                    <h4 class="mb-0">Add New Games</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Sell" asp-action="AddGames" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="ProductName" class="form-label"></label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductDescription" class="form-label"></label>
                            <textarea asp-for="ProductDescription" class="form-control"></textarea>
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductImage" class="form-label"></label>
                            <input asp-for="ProductImage" class="form-control" />
                            <span asp-validation-for="ProductImage" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ProductPrice" class="form-label"></label>
                            <input asp-for="ProductPrice" class="form-control" />
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Stock" class="form-label"></label>
                            <input asp-for="Stock" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="hidden" asp-for="UserId" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn text-white" style="background-color: #9800FF;">Add Item</button>
                            <a asp-action="SellGames" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
