@model IEnumerable<gamers_heaven.Models.Products>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" style="color: #9800FF; justify-content: center; height: 45px;">
                        <i class="bi bi-binoculars-fill"></i>
                    </span>
                </div>
                <input type="text" id="searchBar" class="form-control" style="height: 45px;" placeholder="Search for games...">
            </div>
        </div>
    </div>
    <div id="productList">
        @await Html.PartialAsync("Partials/_GamesList", Model)
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchBar').on('input', function () {
                var query = $(this).val();
                $.ajax({
                    url: '@Url.Action("Search", "Home")',
                    type: 'GET',
                    data: { query: query },
                    success: function (data) {
                        $('#productList').html(data);
                    }
                });
            });
        });
    </script>
}
